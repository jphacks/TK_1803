<% id = @video.user.id %>
<% if id == @user_id %>
  <%= link_to 'Edit', edit_video_path(@video) %> |
  <%= link_to 'Back', videos_path %>
<% end %>

<div class="row">

</div>

<% i = 0 %>
<% id = @video.user.id %>

<% name = @video.name %>
<% command =  "name= '" +name+ "'" + " and user_id =" + id.to_s%>
<% Video.where(command).each do |video| %>
  <% if i%3==0 %>
    <% '<div class="row">' %>
  <% end %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <iframe width="100%" height="265" src="<%=video.url.sub(/watch\?v=/, "embed/")%>" frameborder="0" allowfullscreen></iframe>

      <div class="caption">

        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-8">
            <p>
              <span class="fa fa-music"></span>
              <span style="font-size: 28px;"><%= video.name %></span><br>
              <i class="oi oi-tag"></i>
              <span><%= video.score %></span><br>
              <span class="oi oi-headphones"></span>
              <span><%= video.instrument%></span><br>
              <span class="oi oi-clock"></span>
              <%= simple_time(video.created_at) %>
            </p>
          </div>

          <div class="col-md-1">
            <ul class="icons">
              <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a>
              <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a>
              <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a>
            </ul>
          </div>
        </div >

      </div>
    </div>
  </div>

  <% if i%3==0 %>
    <% '</div>' %>
  <% end %>
  <% i+=1 %>
<% end %>


